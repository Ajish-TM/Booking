<h1><%= @service.new_record? ? 'Add Service' : 'Edit Service' %></h1>

<%= form_with(model: [:admin, @service], local: true) do |form| %>
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label :duration %>
    <%= form.number_field :duration, class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label :price %>
    <%= form.number_field :price, class: "form-control" %>
  </div>

  <div class="actions">
    <%= form.submit class: "btn btn-primary" %>
    <%= link_to 'Cancel', admin_services_path, class: "btn btn-secondary" %>
  </div>
<% end %>
